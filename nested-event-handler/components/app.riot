  </div>

  <script>
    export default {
      handleClick(name) {
        alert(`Hi, I'm ${name}!!`)
      }
    }
  </script>

  <style>
    ul {
      padding-left: 20px;
    }
    li {
      list-style: none;
    }
    li:last-child {
      margin-top: 20px;
    }
  </style>
</app>
