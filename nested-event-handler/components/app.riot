<app>
  <div class="app-header">
    <img src="https://riot.js.org/img/logo/riot-logo.svg" alt="riot logo" class="logo">
  </div>
  <h1>{ props.message }</h1>

  <div class="buttons">
    <ul>
      <li>Button A: <child me="John" alertMe={handleClick} /></li>
      <li>Button B: <child me="Nancy" alertMe={handleClick} /></li>
